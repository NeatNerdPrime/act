{
  "name": "MITRE ACT Development",
  
  // Use the default universal image (includes nvm, common tools, etc.)
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  
  // Run our setup script
  "postCreateCommand": "bash .devcontainer/setup.sh",
  
  // Start dev server
  "postStartCommand": "pnpm run dev",
  
  // Port forwarding - auto-forward all ports
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Nuxt Dev Server",
      "onAutoForward": "notify"
    }
  },
  
  // Auto-forward any other ports
  "otherPortsAttributes": {
    "onAutoForward": "silent"
  },

  // VS Code settings
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        }
      },
      "extensions": [
        "Vue.volar",
        "nuxtr.nuxtr-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  
  // Environment variables
  "remoteEnv": {
    "NODE_ENV": "development",
    "NUXT_UI_PRO_LICENSE": "${localEnv:NUXT_UI_PRO_LICENSE}"
  }
}